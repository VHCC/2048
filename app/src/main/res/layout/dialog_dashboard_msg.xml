<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_common_dialog_Content_Background"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/settingHomeDialogResultIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/common_dialog_content_padding"
            android:src="@drawable/icon_popup_note_tip"/>

    <TextView
            android:id="@+id/dashboardDialogResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dashboardTitleBarTextColor"
            android:text=""/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_dialog_content_padding"
            android:orientation="vertical">

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divide_line_size"
                android:background="@color/systemSearchingDialogListChooserDivideLine"/>

        <TextView
                android:id="@+id/dashboardDialogResultTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/common_dialog_content_padding"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divide_line_size"
                android:background="@color/systemSearchingDialogListChooserDivideLine"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/common_block_button_background_blue"
                android:textColor="@drawable/common_block_button_text_white"
                android:text="OK"/>

    </LinearLayout>

</LinearLayout>